input {

    udp {
        port => <%= @collectd_port %>
        buffer_size => 1452
        codec => collectd{}
        type => "collectd"
    }

    file {
        path => "/etc/demo/logging.log"
        type => "log4j"
    }
}

filter {
    if [type] == "collectd" {

    } else if [type] == "log4j" {
        grok {
          match => [ "message", "%{TIMESTAMP_ISO8601} %{LOGLEVEL} %{GREEDYDATA}" ]
        }

    }
}


output {

    elasticsearch {
        <% @mastnodes = scope.function_hiera(['elastic_cluster::clientnodes']) -%>
        hosts => [<%= @mastnodes.map{ |node| "\"#{node}\"" }.join(',') %>]
        index => "%{target}-%{+YYYY.MM.dd}"
    }
}

